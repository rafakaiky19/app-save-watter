<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Blue200"
    tools:context=".TeladeCadastro">


    <ImageView
        android:id="@+id/ondas"
        android:layout_width="425dp"
        android:layout_height="280dp"
        android:layout_marginBottom="672dp"
        android:rotation="180"
        android:src="@drawable/ondaspng"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="arial"
        android:text="Save Watter"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints"/>


    <TextView
        android:id="@+id/title_cadastrese"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Cadastre-se"
        android:textColor="@color/black"
        android:textSize="50dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ondas"
        app:layout_constraintVertical_bias="0.064" />

    <ImageView
        android:id="@+id/conteiner"
        android:layout_width="374dp"
        android:layout_height="302dp"
        android:layout_marginTop="56dp"
        android:src="@drawable/conteiner"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.486"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_cadastrese"
        app:layout_constraintVertical_bias="0.243" />

    <EditText
        android:id="@+id/edit_nome"
        style="@style/Edit_text"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:hint="Nome:"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@id/conteiner"
        app:layout_constraintEnd_toStartOf="@id/conteiner"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="@+id/conteiner"
        app:layout_constraintTop_toTopOf="@id/conteiner" />

    <EditText
        android:id="@+id/Edit_Email"
        style="@style/Edit_text"
        android:layout_marginTop="24dp"
        android:drawableRight="@drawable/ic_email"
        android:hint="Email:"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@id/conteiner"
        app:layout_constraintEnd_toStartOf="@id/conteiner"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="@+id/conteiner"
        app:layout_constraintTop_toBottomOf="@id/edit_nome" />

    <EditText
        android:id="@+id/Edit_senha"
        style="@style/Edit_text"
        android:layout_marginTop="24dp"
        android:drawableRight="@drawable/eye_ic"
        android:hint="Senha:"
        android:inputType="numberPassword"
        app:layout_constraintEnd_toEndOf="@id/conteiner"
        app:layout_constraintEnd_toStartOf="@id/conteiner"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="@+id/conteiner"
        app:layout_constraintTop_toBottomOf="@id/Edit_Email" />

    <Button
        android:id="@+id/button_cadastro"
        style="@style/Buttom"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/blue500"
        android:text="Cadastrar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/conteiner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/conteiner" />


</androidx.constraintlayout.widget.ConstraintLayout>